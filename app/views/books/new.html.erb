
<h1>New book</h1>

<%= form_for(@book) do |f| %>
 
    <h4>Title</h4>
    <%= f.text_field :title, class: "book_title" %>
 
    <h4>Opinion</h4>
    <%= f.text_area :opinion, class: "book_body" %>

    <%= f.hidden_field :user_id, value: current_user.id %>
 
    <%= f.submit 'Create Book' %>
 
<% end %>