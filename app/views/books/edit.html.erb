

<div class="book-edit-container">
<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>

<h4>Title</h4>
<%= f.text_field :title, class: "book_title" %>

<h4>Opinion</h4>
<%= f.text_area :opinion, class: "book_body" %>

<%= f.hidden_field :user_id, value: current_user.id %>
<%= f.submit "Update Book", class:"btn btn-primary" %><br>

<%= link_to "Show", book_path, class: "edit_book_#{@book.id}" %>
<%= link_to "Back", books_path, class: "back" %>

<% end %>

</div>



