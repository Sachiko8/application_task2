<%= render "partial/sidebar", {user: @user, book: Book.new } %>


<div class="col-xs-9">


  <h1>Book detail</h1>
  <table class="table">

    <tr>
      <td> <%= attachment_image_tag @user, :profile_image, fallback: "no-image.jpg", size: '100x100' %> </td>
      <td> <%= @book.title %> </td>
      <td> <%= @book.opinion %> </td>


    <% if @user == current_user %>
      <td> 
        <button class="btn btn-success" >
        <%= link_to "Edit", edit_book_path, class: "edit_book_#{@book.id}" %>
      </button>
       </td>
       
      <td>
        <button class="btn btn-danger">
        <%= link_to "Destroy", book_path, method: :delete,class: "destroy_book_#{@book.id}" %>
        </button>
      </td>
      <% end %>
    </tr>

  </table>
</div>
</div>

