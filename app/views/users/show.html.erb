<%= render "partial/sidebar", {user: @user, book: @book} %>

    <div class="col-xs-9">


     <h1>Books</h1>

     <table class="table">
      <tr>
        <th></th>
        <th>Title</th>
        <th>Opinion</th>
      </tr>

      <% @user.books.each do |book| %>
        <tr>
            <td> <%= attachment_image_tag @user, :profile_image, fallback: "no-image.jpg", size: '100x100' %> </td>
            <td> <%= link_to book.title, book_path(book.id), class: "books" %> </td>
            <td> <%= book.opinion %> </td>
        </tr>
      <% end %>
   </table>
</div>
</div>
</div>